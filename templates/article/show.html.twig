{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .article-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        
        .article-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .article-meta {
            color: #666;
            font-size: 0.9rem;
            margin: 0.5rem 0;
        }
        
        .article-content {
            line-height: 1.7;
        }
        
        .article-content h2 {
            margin: 2rem 0 1rem;
            font-size: 1.5rem;
        }
        
        .article-content p {
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <article class="article-container">
        <header class="article-header">
            <h1 style="font-size: 2.5rem; font-weight: bold;">{{ article.title }}</h1>
            <div class="article-meta">
                By {{ article.author }} • {{ article.createdAt|date('M d, Y') }} • {{ article.readingTime }} read
            </div>
        </header>

        <div class="article-content">
            {{ article.content|raw }}
        </div>

        <footer style="margin-top: 3rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
            <a href="{{ path('app_article_list') }}" style="color: #2563eb; text-decoration: none;">
                ← Back to Articles
            </a>
        </footer>
    </article>
{% endblock %}